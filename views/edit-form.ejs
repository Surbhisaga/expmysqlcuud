<form method="post">
    <table>
        <tr>
            <td>Name : </td>
            <td>
                <input type="text" placeholder="Enter name" name="user_name" value="<%= db_rows_array[0].user_name %>" required>
            </td>
        </tr>
        <tr>
            <td>Email : </td>
            <td>
                <input type="text" placeholder="Enter Email" name="user_email" value="<%= db_rows_array[0].user_email %>" required>
            </td>
        </tr>
        <tr>
            <td>Mobile : </td>
            <td>
                <input type="text" placeholder="Enter mobile" name="user_mobile" value="<%= db_rows_array[0].user_mobile %>" required>
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit">
                <input type="button" value="Display" onclick="window.location='display';">
            </td>
        </tr>
    </table>
</form>